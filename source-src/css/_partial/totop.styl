
@keyframes rocket {
  0% {
    transform translateY(0)
    opacity 1;
  }
  45% {
    transform translateY(-3.2rem)
    opacity 0;
  }
  55% {
    transform translateY(3.2rem)
    opacity 0;
  }
  100% {
    transform translateY(0)
    opacity 1;
  }
}

.totop
  margin-bottom .8rem
  &:hover > i {
    animation rocket .3s ease-in-out
  }